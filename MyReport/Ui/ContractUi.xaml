<UserControl
    x:Class="MyReport.Ui.ContractUi"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyReport.Ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Margin="0,8">
            <TextBlock
                Margin="8,0"
                VerticalAlignment="Center"
                Style="{StaticResource StyleDesignHeadline6TextBlock}"
                Text="Договор об оценке" />
        </Border>
        <Border Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Margin="0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource StyleDesignSubtitle2TextBlock}"
                            Text="Номер договора" />
                        <Border Grid.Column="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox
                                    Grid.Column="0"
                                    Height="32"
                                    MinWidth="240"
                                    Margin="8,0"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    FontFamily="DIN Pro Regular"
                                    FontSize="14"
                                    Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                                <Button
                                    Grid.Column="1"
                                    Margin="8,0"
                                    Padding="18,6"
                                    VerticalAlignment="Center"
                                    Content="Выбрать договор"
                                    FontFamily="DIN Pro Medium"
                                    FontSize="16" />
                            </Grid>
                        </Border>
                    </Grid>
                </Border>
                <Border Grid.Row="1" Margin="0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource StyleDesignTextBlock}"
                            Text="Дата договора" />
                        <DatePicker
                            Grid.Column="1"
                            Width="120"
                            Height="32"
                            Margin="8,0"
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            FontFamily="DIN Pro Regular"
                            FontSize="14"
                            SelectedDate="{Binding ContractDate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}" />
                    </Grid>
                </Border>
                <Border Grid.Row="2" Margin="0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Margin="8,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource StyleDesignTextBlock}"
                            Text="Цель оценки" />
                        <ComboBox
                            Grid.Column="1"
                            Height="32"
                            MinWidth="240"
                            Margin="8,0"
                            VerticalContentAlignment="Center"
                            DisplayMemberPath="Value"
                            FontFamily="DIN Pro Regular"
                            FontSize="14"
                            ItemsSource="{Binding Target}"
                            SelectedValue="{Binding Target, Converter={StaticResource EnumConverter}, ConverterParameter={Binding}}" />
                    </Grid>
                </Border>
                <Border Grid.Row="3" Margin="8">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,4"
                            Style="{StaticResource StyleDesignTextBlock}"
                            Text="Предпологаемое использование результатов оценки" />
                        <TextBox
                            Height="92"
                            MinWidth="240"
                            Margin="0,4,0,0"
                            VerticalAlignment="Center"
                            VerticalContentAlignment="Top"
                            FontFamily="DIN Pro Regular"
                            FontSize="14"
                            Text="{Binding IntendedUse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True, ValidatesOnNotifyDataErrors=True}"
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <Border Grid.Row="2" Margin="0,8">
            <DockPanel>
                <TextBlock
                    Margin="8,0,16,0"
                    VerticalAlignment="Center"
                    Style="{StaticResource StyleDesignSubtitle2TextBlock}"
                    Text="Заказчик" />
                <ListBox
                    Margin="16,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    VerticalContentAlignment="Center"
                    BorderThickness="0"
                    FontFamily="DIN Pro Medium"
                    FontSize="16"
                    ToolTip="Продолжение следует...">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                    <ListBoxItem Padding="16,8" Content="Частное лицо" />
                    <ListBoxItem Padding="16,8" Content="Организация" />
                </ListBox>
                <!--  Только для теста! Удалить!  -->
                <Button
                    Margin="16,0"
                    Padding="16,8"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding DataContext.SaveData, RelativeSource={RelativeSource AncestorType={x:Type Window}, Mode=FindAncestor}}"
                    Content="Сохранить"
                    FontFamily="DIN Pro Medium"
                    FontSize="16" />
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
